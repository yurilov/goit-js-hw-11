{{#each this}}
<a class="gallery__item" href="{{largeImageURL}}" >
  <div class="photo-card">
    <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy" class="photo"/>
    <div class="info">
      <p class="info-item">
        <b>{{likes}} Likes</b>
      </p>
      <p class="info-item">
        <b>{{views}} Views</b>
      </p>
      <p class="info-item">
        <b>{{comments}} Comments</b>
      </p>
      <p class="info-item">
        <b>{{downloads}} Downloads</b>
      </p>
    </div>
  </div>
</a>
{{/each}}